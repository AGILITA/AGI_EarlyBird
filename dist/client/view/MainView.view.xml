 <mvc:View controllerName="com.myorg.bpListUI5.controller.MainView"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">
  <Shell>
  <App id="idAppControl" >
    <pages>
      <Page title="{i18n>title}">
        <content>
        	<List
		        headerText="{i18n>businessPartners}"
		        items="{
			      path: '/'
		        }" >
		<StandardListItem
			title="{businessPartner}"
      info="{businessPartnerCategory}"
			description="{businessPartnerFullName}"/>
	</List>
        </content>
      </Page>
    </pages>
  </App>
  </Shell>
</mvc:View>